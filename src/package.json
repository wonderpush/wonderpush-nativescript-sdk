{
    "name": "wonderpush-nativescript-sdk",
    "version": "0.1.0",
    "description": "WonderPush NativeScript SDK",
    "repository": {
        "type": "git",
        "url": "https://github.com/wonderpush/wonderpush-nativescript-sdk.git"
    },
    "main": "wonderpush-nativescript-sdk",
    "typings": "index.d.ts",
    "nativescript": {
        "platforms": {
            "android": "4.0.0",
            "ios": "4.0.0"
        },
        "hooks": [
            {
                "type": "before-prepare",
                "script": "scripts/app-hooks/before-prepare.js",
                "inject": true
            },
            {
                "type": "after-prepare",
                "script": "scripts/app-hooks/after-prepare.js",
                "inject": true
            }
        ]
    },
    "scripts": {
        "tsc": "tsc -skipLibCheck",
        "build": "npm i && tsc && npm run build.native",
        "build.native": "node scripts/build-native.js",
        "postclone": "npm i && node scripts/postclone.js && cd ../demo && npm i && cd ../src && npm run plugin.link",
        "test.android": "npm i && npm run tsc && npm run tslint && cd ../demo && tns build android && tns test android --justlaunch",
        "test.ios": "npm i && npm run tsc && npm run tslint && cd ../demo && tns build ios && tns test ios --justlaunch",
        "tslint": "cd .. && tslint \"**/*.ts\" --config tslint.json --exclude \"**/node_modules/**\"",
        "plugin.link": "npm link && cd ../demo && npm link wonderpush-nativescript-sdk && cd ../src",
        "plugin.tscwatch": "npm run tsc -- -w",
        "demo.ios": "npm i && npm run tsc && cd ../demo && tns run ios --syncAllFiles",
        "demo.android": "npm i && npm run tsc && cd ../demo && tns run android --syncAllFiles",
        "demo.reset": "cd ../demo && rimraf platforms",
        "plugin.prepare": "npm run build && cd ../demo && tns plugin remove wonderpush-nativescript-sdk && tns plugin add ../src",
        "clean": "cd ../demo && rimraf hooks node_modules platforms && cd ../src && rimraf node_modules && npm run plugin.link",
        "ci.tslint": "npm i && tslint '**/*.ts' --config '../tslint.json' --exclude '**/node_modules/**'",
        "prepack": "npm run build.native",
        "postinstall": "node postinstall.js",
        "preuninstall": "node preuninstall.js"
    },
    "keywords": [
        "NativeScript",
        "JavaScript",
        "Android",
        "iOS"
    ],
    "author": {
        "name": "WonderPush",
        "email": "contact@wonderpush.com"
    },
    "bugs": {
        "url": "https://github.com/wonderpush/wonderpush-nativescript-sdk/issues"
    },
    "license": "Apache-2.0",
    "homepage": "https://github.com/wonderpush/wonderpush-nativescript-sdk",
    "readmeFilename": "README.md",
    "devDependencies": {
        "prompt": "^1.0.0",
        "rimraf": "^2.5.0",
        "semver": "^5.5.0",
        "tns-core-modules": "^4.0.0",
        "tns-platform-declarations": "^4.0.0",
        "tslint": "^5.0.0",
        "typescript": "~2.3.0"
    },
    "dependencies": {
        "fs-extra": "^6.0.1",
        "nativescript-hook": "^0.2.4"
    }
}
